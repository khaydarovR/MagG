@using Microsoft.EntityFrameworkCore
@model Mag.Common.Models.UserRegisterDto;

@{
    ViewData["Title"] = "Регистрация";
}

<section class="mt-5 md-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px; background-color: #bfe2e9">
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mt-4">Регистрация</p>

                <form method="post" class="mx-1" asp-antiforgery="true" asp-action="Register" asp-controller="Account">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="Phone"></span>
                      <input id="form3Example1q" class="form-control" asp-for="Phone"/>
                      <label class="form-label" asp-for="Phone"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="Email"></span>
                      <input type="email" id="form3Example3c" class="form-control" asp-for="Email"/>
                      <label class="form-label" asp-for="Email"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="Password"></span>
                      <input type="password" id="form3Example4c" class="form-control" asp-for="Password"/>
                      <label class="form-label" asp-for="Password"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="Password2"></span>
                      <input type="password" id="form3Example4c" class="form-control" asp-for="Password2"/>
                      <label class="form-label" asp-for="Password2"></label>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      Согласен с  <a href="#!"> пользовательским соглашением</a>
                    </label>
                  </div>

                  <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg"
                            asp-controller="Account" 
                            asp-action="Register">Зарегистрироваться</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                
                <img src="~/img/add-user.png"
                     class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>