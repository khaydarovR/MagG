@using Microsoft.EntityFrameworkCore
@model Mag.Common.Models.UserEditDto;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Редактировать";
}

<section class="mt-5 md-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px; background-color: #bfe2e9">
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mt-4">Редактировать данные</p>

                <form method="post" class="mx-1" asp-antiforgery="true" asp-action="Edit">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="UserName"></span>
                      <input type="text" id="form3Example4c" class="form-control" asp-for="UserName"/>
                      <label class="form-label" asp-for="UserName"></label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span class="text-danger" asp-validation-for="PasswordOld"></span>
                      <input type="password" id="form3Example4c" class="form-control" asp-for="PasswordOld"/>
                      <label class="form-label" asp-for="PasswordOld"></label>
                    </div>
                  </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <span class="text-danger" asp-validation-for="PasswordNew"></span>
                        <input type="password" id="form3Example4c" class="form-control" asp-for="PasswordNew"/>
                        <label class="form-label" asp-for="PasswordNew"></label>
                      </div>
                    </div>
                  <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg"
                            asp-action="Edit">Сохранить</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://www.pngmart.com/files/21/Account-Avatar-Profile-PNG-Photo.png" class="img-fluid" alt="image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>