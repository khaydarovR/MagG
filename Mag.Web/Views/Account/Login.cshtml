@using Microsoft.EntityFrameworkCore
@model Mag.Common.Models.UserLoginDto;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Вход";
}

<section class="">
  <div class="container py-5">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form method="post" asp-route-returnUrl="@Model.ReturnUr" asp-controller="Account" asp-action="Login">
          <div class="text-danger" asp-validation-summary="All"></div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg"/>
            <label asp-for="Email" class="form-label"></label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg"/>
            <label asp-for="Password" class="form-label"></label>
          </div>
          
          <div class="form-outline mb-4">
            <input asp-for="RememberMe" type="checkbox" id="form1Example23" class="form-check-input"/>
            <label asp-for="RememberMe" class="form-label"></label>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <a href="#!">Забыли пароль?</a>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Войти</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">ИЛИ</p>
          </div>

          <a class="btn btn-primary btn-lg btn-block btn-primary" href="#!"
             role="button">
            <i class="fab fa-facebook-f me-2"></i>Войти через Google
          </a>
        </form>
      </div>
    </div>
  </div>
</section>

